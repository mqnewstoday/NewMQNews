rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // User specific data (bookmarks, settings, etc.)
    // Only the user themselves can read/write their own data
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow public read and write for comments
    // In production you might want to add validation (e.g. valid fields) or request.auth requirement even for guests
    match /comments/{commentId} {
      allow read, write: if true;
    }
    
    // Default deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
